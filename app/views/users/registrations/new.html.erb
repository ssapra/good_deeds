<%#= render "users/shared/links" %>

<div class="mdl-card mdl-shadow--2dp demo-card-wide">
  <div class="mdl-card__title">
    <h2 class="mdl-card__title-text">Sign up</h2>
  </div>
  <div class="mdl-card__supporting-text">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="mdl-textfield mdl-js-textfield">
        <%= f.label :email, nil, placeholder: "Email", class: "mdl-textfield__label" %>
        <%= f.email_field :email, autofocus: true, class: "mdl-textfield__input" %>
      </div>

      <div class="mdl-textfield mdl-js-textfield">
        <%= f.label :password, nil, placeholder: "Password", class: "mdl-textfield__label" %>
        <!-- <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br /> -->
        <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "mdl-textfield__input" %>
      </div>

      <div class="mdl-textfield mdl-js-textfield">
        <%= f.label :password_confirmation, nil, class: "mdl-textfield__label" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "mdl-textfield__input" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="remember_me">
          <%= f.check_box :remember_me, class: "mdl-checkbox__input", id: 'remember_me' %>
          <span class="mdl-checkbox__label">Remember Me</span>
        </label>
      <% end %>

      <%= f.submit "Sign up", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--accent"  %>
    <% end %>
  </div>
</div>
