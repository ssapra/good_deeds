%table.mdl-data-table.mdl-js-data-table#legislator_results
  %thead
    %tr
      %th.mdl-data-table__cell--non-numeric Name
      %th.mdl-data-table__cell--non-numeric Party
      %th.mdl-data-table__cell--non-numeric State
      %th.mdl-data-table__cell--non-numeric Website
  %tbody
    -legislators.each do |legislator|
      %tr{'data-url' => "/legislators/#{legislator.id}"}
        %td.mdl-data-table__cell--non-numeric=legislator.full_title
        %td.mdl-data-table__cell--non-numeric=legislator.party
        %td.mdl-data-table__cell--non-numeric=legislator.state
        %td.mdl-data-table__cell--non-numeric=link_to legislator.website, legislator.website, target: '_'

= paginate @legislators
